{
    "name": "vscode-file-header",
    "displayName": "vscode-file-header",
    "description": "insert header comment,and automatically update the time",
    "version": "0.0.1",
    "publisher": "cyseria",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/cyseria/vscode-file-header.git"
    },
    "activationEvents": [
        "onCommand:extension.addFileHeader"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "File header Configuration",
            "properties": {
                "fileheader.custom": {
                    "type": "object",
                    "default": {
                        "author": "your name",
                        "email": "your email",
                        "config": {
                            "file": "ğŸ˜file",
                            "email": "ğŸ˜email",
                            "author": "ğŸ˜cyseria",
                            "createTime": "ğŸ˜ceateTime"
                        },
                        "tpl": ""
                    },
                    "description": "By default, here custom file header "
                }
            }
        },
        "commands": [
            {
                "command": "extension.addFileHeader",
                "title": "ğŸ˜‹ addFileHeader"
            }
        ],
        "keybindings": [                              
            {
                "command": "extension.addFileHeader",
                "key": "ctrl+shift+h",
                "mac": "cmd+shift+h"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
